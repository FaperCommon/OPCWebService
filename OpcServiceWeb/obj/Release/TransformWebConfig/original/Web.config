<?xml version="1.0"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  https://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>
  <system.web>
    <httpRuntime maxUrlLength="200000" targetFramework="4.7.2"/>
    <compilation debug="true"/>
  </system.web>
  <system.serviceModel>
    <services>
      <service name="OpcServiceWeb.OpcService">
        <endpoint address="" binding="webHttpBinding" contract="OpcServiceWeb.IOpcService" behaviorConfiguration="IOPCServiceBehavior"/>
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="IOPCServiceBehavior">
          <webHttp defaultOutgoingResponseFormat="Json"/>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="OPCServiceBehavior">
          <serviceMetadata httpGetEnabled="True"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true"/>
  </system.serviceModel>
</configuration>